{
  "info": {
    "name": "Shopping Cart API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{ \"username\": \"alice\", \"password\": \"pass\" }"},
        "url": {"raw":"http://localhost:8080/users","host":["http://localhost:8080"], "path":["users"]}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{ \"username\": \"alice\", \"password\": \"pass\" }"},
        "url": {"raw":"http://localhost:8080/users/login","host":["http://localhost:8080"], "path":["users","login"]}
      }
    },
    {
      "name": "List Items",
      "request": {
        "method": "GET",
        "url": {"raw":"http://localhost:8080/items","host":["http://localhost:8080"], "path":["items"]}
      }
    },
    {
      "name": "Add to Cart (use Authorization header with token)",
      "request": {
        "method": "POST",
        "header":[{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"{{token}}"}],
        "body":{"mode":"raw","raw":"{ \"item_id\": 1 }"},
        "url":{"raw":"http://localhost:8080/carts","host":["http://localhost:8080"], "path":["carts"]}
      }
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header":[{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"{{token}}"}],
        "body":{"mode":"raw","raw":"{ \"cart_id\": 1 }"},
        "url":{"raw":"http://localhost:8080/orders","host":["http://localhost:8080"], "path":["orders"]}
      }
    }
  ]
}
